        </Grid>
        <BoxView  IsVisible="{Binding IsBusy}" BackgroundColor="White"  HeightRequest="{Binding ScreenHeight}" WidthRequest="{Binding ScreenWidth}"  />

        <ActivityIndicator  IsVisible="{Binding IsBusy}"  BackgroundColor="Transparent" 
